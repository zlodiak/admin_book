<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<%= link_to 'New Review', new_review_path if can? :create, Review %>

<br>

<table border="1">
  <thead>
    <tr>
      <th>name</th>
      <th>email</th>
      <th>message</th>
      <th>image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.name %></td>
        <td><%= review.email if review.email %></td>
        <td><%= review.message.html_safe %></td>
        <td>
        <%= image_tag(review.image.url(:thumb), alt: '') if review.image_file_name %>
        </td>
        <td><%= link_to 'Show', review if can? :read, Review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) if can? :update, Review %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Review %></td>
      </tr>
    <% end %>
  </tbody>
</table>







